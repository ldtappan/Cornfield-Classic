# Copy to .env and fill in values.
# Server
PORT=8080
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/laptracker
JWT_SECRET=change_me_super_secret
TOTP_SECRET=change_me_gate_secret   # used to derive rotating gate tokens
ADMIN_KEY=change_me_admin_key       # used for admin endpoints & gate display
EVENT_ID=demo-event                 
GATE_ID=main                        
TOKEN_WINDOW_SECONDS=10             # rotation window for gate tokens
MIN_LAP_SECONDS=10                  # reject scans within this many seconds per rider

# Web (Vite will inline these that start with VITE_)
VITE_API_BASE=http://localhost:8080
VITE_EVENT_ID=demo-event
VITE_GATE_ID=main
